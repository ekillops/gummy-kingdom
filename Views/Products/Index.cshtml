@{
    ViewData["Title"] = "Gummy Bear Kindgom - Products";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model ICollection<GummyBearKingdom.Models.Product>

<h2>Our Products</h2>

@if (Model.Count != 0)
{
    <div class="row">
        @foreach (var product in Model)
        {
            <div class="col-md-2">
                <img class="product-img-sm img-responsive" src="@product.ImageUrl" alt="@product.Name" />
                <h4><a asp-controller="Products" asp-action="Details" asp-route-id="@product.ProductId">@product.Name</a></h4>
                <p><small>Made in @product.OriginCountry</small></p>
            </div>
        }
    </div>
}
else
{
    <p>There are no products available to display</p>
}

<p><a asp-controller="Products" asp-action="Create">Add Product</a></p>