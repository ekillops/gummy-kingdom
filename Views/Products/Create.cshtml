@{
    ViewData["Title"] = "Gummy Bear Kindgom - Products";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model GummyBearKingdom.Models.Product

<h2>Add Product</h2>

<form asp-controller="Products" asp-action="Create" method="post">
    <div asp-validation-summary="ModelOnly"></div>
    <div class="form-group">
        <label for="Name">Product Name</label>
        <input class="form-control" asp-for="Name" placeholder="Gummy Bears" />
        <span class="text-danger" asp-validation-for="Name"></span>
    </div>
    <div class="form-group">
        <label for="Cost">Product Cost</label>
        <input class="form-control" asp-for="Cost" placeholder="5.00"/>
        <span class="text-danger" asp-validation-for="Cost"></span>
    </div>
    <div class="form-group">
        <label for="OriginCountry">Country of Origin</label>
        <input class="form-control" asp-for="OriginCountry" placeholder="USA" />
        <span class="text-danger" asp-validation-for="OriginCountry"></span>
</div>
    <div class="form-group">
        <label for="ImageUrl">Image Url</label>
        <input class="form-control" asp-for="ImageUrl" placeholder="http://www.imagewebsite.com/img/1234"/>
        <span class="text-danger" asp-validation-for="ImageUrl"></span>
    </div>
    <button type="submit" class="btn btn-danger">Add Product</button>
</form>
