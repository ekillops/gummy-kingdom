@{
    ViewData["Title"] = "Gummy Bear Kindgom - Products";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model GummyBearKingdom.Models.Product

<h2>Edit Product</h2>

<form asp-controller="Products" asp-action="Edit" method="post">
    <div asp-validation-summary="ModelOnly"></div>
    <input asp-for="ProductId" />
    <div class="form-group">
        <label for="Name">Product Name</label>
        <input class="form-control" type="text" asp-for="Name" />
        <span class="text-danger" asp-validation-for="Name"></span>
    </div>
    <div class="form-group">
        <label for="Cost">Product Cost</label>
        <input class="form-control" type="number" step=".01" min="0" asp-for="Cost"/>
        <span class="text-danger" asp-validation-for="Cost"></span>
    </div>
    <div class="form-group">
        <label for="OriginCountry">Country of Origin</label>
        <input class="form-control" type="text" asp-for="OriginCountry" />
        <span class="text-danger" asp-validation-for="OriginCountry"></span>

    </div>
    <div class="form-group">
        <label for="ImageUrl">Image (URL)</label>
        <input class="form-control" type="url" asp-for="ImageUrl" />
        <span class="text-danger" asp-validation-for="ImageUrl"></span>

    </div>
    <button type="submit" class="btn btn-danger">Update</button>
</form>